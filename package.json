{
  "name": "electron-fd",
  "productName": "Flowdock",
  "description": "Flowdock electron app",
  "version": "0.1.5-pre1",
  "main": "main.js",
  "optionalDependencies": {
    "electron-installer-debian": "^0.8.1",
    "electron-installer-dmg": "^0.2.1",
    "electron-installer-redhat": "^0.5.0"
  },
  "devDependencies": {
    "electron-debug": "^1.5.0",
    "electron-packager": "^11",
    "electron-rebuild": "^1.7",
    "eslint": "^3.4.0",
    "eslint-config-google": "^0.6.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0"
  },
  "dependencies": {
    "electron": "^1.8",
    "electron-context-menu": "^0.9",
    "electron-spellchecker": "^1.1.2"
  },
  "scripts": {
    "start": "./node_modules/.bin/electron main.js",
    "eslint": "./node_modules/.bin/eslint app main.js",
    "build": "./node_modules/.bin/electron-packager . 'FlowdockApp' --icon=app/resources/icon.png --out=dist --overwrite --platform=darwin,linux --arch=x64",
    "pack_osx": "./node_modules/.bin/electron-installer-dmg 'dist/FlowdockApp-darwin-x64/FlowdockApp.app' 'FlowdockApp' --out=dist",
    "pack_deb": "./node_modules/.bin/electron-installer-debian --src 'dist/FlowdockApp-linux-x64' --arch amd64 --config config.json",
    "pack_rpm": "./node_modules/.bin/electron-installer-redhat --src 'dist/FlowdockApp-linux-x64' --arch amd64 --config config.json"
  }
}
